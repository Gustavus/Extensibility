<phpunit>
  <testsuites>
    <testsuite name="Extensibility">
      <directory suffix="Test.php">/cis/lib/Gustavus/Extensibility/Test/</directory>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist>
      <directory>/cis/lib/Gustavus/Extensibility</directory>
    </whitelist>
  </filter>

  <php>
    <ini name="memory_limit" value="-1"/>
    <ini name="xdebug.collect_params" value="0"/>
    <server name="DOCUMENT_ROOT" value="/cis/www/"/>
  </php>
</phpunit>
